<h1><%= @user.first_name %> <%= @user.last_name %></h1>
<% if flash[:message] %>
    <p><%= flash[:message] %></p>
<% end %>
<% if current_user.id == @user.id %>
    <h2>Add a Recipe?</h2>
        <form action='/recipes' method='post'>
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            Name: <%= text_field(:recipe, :name) %>
            Description: <%= text_field(:recipe, :description) %>
            Instructions: <%= text_area(:recipe, :instructions) %>
            <input type='hidden' name='recipe[user_id]' value= <%= current_user.id %>> 
            <input type='submit' value='Submit Recipe' >
        </form>
<% end %>
<% @user.recipes.each do |recipe| %>
    <h2><%= link_to recipe.name, recipe_url(recipe.id) %></h2>
    <h4><%= recipe.description %></h4>
    <p><%= recipe.instructions %></p>
    <p><%= recipe.user_likes.count %> people like this recipe</p>
    
    <% if recipe.user_likes.include?(current_user) %>
        <form action= 'likes/<%=find_id(recipe.likes, current_user.id) %>' method ='post'>
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
            <input type='hidden' name='_method' value='delete'>
            <input type='submit' value='Unlike'>
    <% else %>
    
        <form action='/likes' method='post'>
            <input type ='hidden' name='authenticity_token' value= '<%= form_authenticity_token %>'>
            <input type='hidden' name='recipe_id' value=<%= recipe.id %>>
            <input type='submit' value='Like'>
        </form>
    <% end %>
<% end %>